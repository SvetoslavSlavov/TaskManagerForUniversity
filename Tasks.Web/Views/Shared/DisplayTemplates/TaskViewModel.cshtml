@model Tasks.Web.Models.TaskViewModel

<div class="col-md-4 col-sm-6 col-xs-12">
    <div class="task-box">
        <h2>@Model.Title</h2>
        <span class="date">@Model.StartDateTime</span>
        @if (Model.Duration != null)
        {
            <span class="duration">
                (@Model.Duration.Value.ToString(@"hh\:mm")hours)
            </span>
        }
        @if (Model.Author != null)
        {
            <div class="author">Author: @Model.Author</div>
        }
        @if (Model.Location != null)
        {
            <div class="location">Location: @Model.Location</div>
        }
        <div id="task-details-@Model.Id">
            @Ajax.ActionLink("View Details »", "TaskDetailsById", "Home",
                new { id = Model.Id },
                new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "task-details-" + Model.Id
                }, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
